<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
		"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	<!-- The main layout. -->
	<definition name="mainLayout" template="/layout/mainLayout.jsp">
		<put-attribute name="title" value="Timetable"/>
	</definition>

	<!-- The list screen for all lecturers. -->
	<definition name="lecturerList" extends="mainLayout">
		<put-attribute name="content" value="/lecturerList.jsp"/>
	</definition>
	
	<definition name="lecturerEvents" extends="mainLayout">
		<put-attribute name="content" value="/lecturerEvents.jsp"/>
	</definition>
	
	<!-- The form for a single lecturer. -->
	<definition name="lecturerForm" extends="mainLayout">
		<put-attribute name="content" value="/lecturerForm.jsp"/>
	</definition>
	
	<!-- The list screen for all events. -->
	<definition name="eventList" extends="mainLayout">
		<put-attribute name="content" value="/eventList.jsp"/>
	</definition>
	
	<!-- The form for a single event. -->
	<definition name="eventForm" extends="mainLayout">
		<put-attribute name="content" value="/eventForm.jsp"/>
	</definition>

</tiles-definitions>
