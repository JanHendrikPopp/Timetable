<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN"
		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<field name="major">
		<field-validator type="required">
			<message key="msg.validator.required.major"/>
		</field-validator>
	</field>
	<field name="centuryChar">
		<field-validator type="required">
			<message key="msg.validator.required.centuryChar"/>
		</field-validator>
	</field>
	<field name="year">
		<field-validator type="required">
			<message key="msg.validator.required.centuryYear"/>
		</field-validator>
		<field-validator type="int">
			<param name="min">10</param>
			<param name="max">99</param>
			<message key="msg.validator.intRange.centuryYear"/>
		</field-validator>
	</field>
	<field name="size">
		<field-validator type="required">
			<message key="msg.validator.required.centurySize"/>
		</field-validator>
		<field-validator type="int">
			<param name="min">1</param>
			<param name="max">200</param>
			<message key="msg.validator.intRange.centurySize"/>
		</field-validator>
	</field>
	<field name="changeoverTime">
		<field-validator type="required">
			<message key="msg.validator.required.changeoverTime"/>
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<param name="max">200</param>
			<message key="msg.validator.intRange.changeoverTime"/>
		</field-validator>
	</field>
</validators>